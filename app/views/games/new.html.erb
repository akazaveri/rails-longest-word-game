<div class="container mt-5">
  <h1>New game</h1>
  <p><%= @letters.join(" - ") %></p><br>

  <p>What is the longest word you can find?</p>
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @letters %>
    <div class="input-group mb-3 w-25">
      <input type="text" name="word" class="form-control" placeholder="Add your work" aria-label="Recipient's username" aria-describedby="button-addon2">
      <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Play</button>
    </div>
  </form>
</div>
